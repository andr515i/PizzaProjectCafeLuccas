@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
<h1 id="AddPopUp">se menu</h1>
</div>


<div class="AddPopUp" data-toggle="modal" Data-target="#LunchOffer">
    @Html.Label("Frokost")
</div>
<div class="modal fade" id="LunchOffer" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <center>
                    <h1>
                        Frokosttilbud mellem 11 og 15. <br />
                        20% på alle pizzaer
                    </h1>
                </center>

               



            </div>
        </div>
    </div>
</div>

<Scripts>{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#AddPopUp").click(function (e) {
                $('#LunchOffer').modal('toggle');
            });
        });
    </script>
    }



